<!--Form Handling-->
<form action="/api/users" method="POST" id="add_user">
  <div class="new-user">
    <div class="form-group">
      <label for="name" class="text-light updated">Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="name" value="" class="row" placeholder="Mark" />
    </div>
    <div class="form-group">
      <label for="email" class="text-light updated">Email</label>
      <input
        type="text"
        name="email"
        value=""
        class="row"
        placeholder="Mark@123.com"
      />
    </div>
    <div class="form-group">
      <label for="gender" class="text-light">Gender</label>
      <div class="radio inline">
        <input type="radio" name="gender" class="radio-light" value="Male" />
        <label for="gender-1" class="text-light">Male</label>
      </div>
      <div class="radio inline">
        <input type="radio" name="gender" class="radio-light" value="Female" />
        <label for="gender-2" class="text-light">Female</label>
      </div>
    </div>

    <div class="form-group">
      <label for="status" class="text-light">Status</label>
      <div class="radio inline">
        <input type="radio" name="status" class="radio-light" value="Active" />
        <label for="status-1" class="text-light">Active</label>
      </div>
      <div class="radio inline">
        <input
          type="radio"
          name="status"
          class="radio-light"
          value="Inactive"
        />
        <label for="status-2" class="text-light">Inactive</label>
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
<!--/Form Handling-->
