<!--include header-->
<%- include('include/_header')%>
<!--/include header-->

<!--Main Site-->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"> <i class="fas fa-angle-double-left"></i>All Users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light"> Use the below form to update the profile </span>
    </div>
    <!--Form Handling-->
    <form method="POST" id="update_user"></form>
    <div class="new-user">
      <div class="form-group">
        <label for="name" class="text-light updated">Name</label>
        <input type="hidden" name="id" value="" />
        <input
          type="text"
          name="name"
          value=""
          class="row"
          placeholder="Mark"
        />
      </div>
      <div class="form-group">
        <label for="email" class="text-light updated">Email</label>
        <input
          type="text"
          name="email"
          value=""
          class="row"
          placeholder="Mark@123.com"
        />
      </div>
      <div class="form-group">
        <label for="gender" class="text-light">Gender</label>
        <div class="radio inline">
          <input type="radio" name="gender" class="radio-light" value="Male" />
          <label for="gender" class="text-light">Male</label>
        </div>
        <div class="radio inline">
          <input
            type="radio"
            name="gender"
            class="radio-light"
            value="Female"
          />
          <label for="gender" class="text-light">Female</label>
        </div>
      </div>

      <div class="form-group">
        <label for="gender" class="text-light">Status</label>
        <div class="radio inline">
          <input
            type="radio"
            name="status"
            class="radio-light"
            value="Active"
          />
          <label for="gender" class="text-light">Active</label>
        </div>
        <div class="radio inline">
          <input
            type="radio"
            name="status"
            class="radio-light"
            value="Inactive"
          />
          <label for="gender" class="text-light">Inactive</label>
        </div>
      </div>

      <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
      </div>
    </div>
    <!--/Form Handling-->
  </div>
</main>
<!--/Main Site-->

<!--include footer-->
<%- include('include/_footer')%>
<!--/include footer-->
